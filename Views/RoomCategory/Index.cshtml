@model IEnumerable<Hospital_Management.Models.RoomCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section admin_navbar{
    @Html.Partial("_AdminNavbarPartial", "Doctor Bill")
}


<a href="@Url.Action("Create", "RoomCategory")" class="btn btn-success">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    Create New
</a>
<br /><br />
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_day_tk)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-5">
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.per_day_tk )
            </td>
            <td>

                <a href="@Url.Action("Edit", "RoomCategory", new { id = item.id })" class="btn btn-success" style="float:right; margin-left:5px;margin-right:30px;">
                    <span class="glyphicon glyphicon-edit"></span>
                    Edit
                </a>
                <a href="@Url.Action("Details", "RoomCategory", new { id = item.id })" class="btn btn-success" style="float:right; margin-left:5px">
                    <span class="glyphicon glyphicon-th-list"></span>
                    Details
                </a>
                <a href="@Url.Action("Delete", "RoomCategory", new { id = item.id })" class="btn btn-success" style="float:right; margin-left:5px">
                    <span class="glyphicon glyphicon-trash"></span>
                    Delete
                </a>

                @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Details", "Details", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
            </td>
        </tr>
    }

</table>
