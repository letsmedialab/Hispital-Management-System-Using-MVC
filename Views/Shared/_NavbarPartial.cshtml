
@model string
@{
    List<KeyValuePair<string, string>> nav_controllers = new List<KeyValuePair<string, string>>()
    {
        new KeyValuePair<string, string>("Home","Home"),
        new KeyValuePair<string, string>("Online Application","OnlineApplications"), //2nd parameter is the controller name...
        //first one the value that will come out in the view page....
        new KeyValuePair<string, string>("Departments","Departments"),
        new KeyValuePair<string, string>("About Us","About")
    };
}
<div class="navbar navbar-inverse">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            @foreach (KeyValuePair<string, string> nav in nav_controllers)
            {
                if (nav.Key.Equals(Model))
                {
                    <li class="active">@Html.ActionLink(nav.Key, "", nav.Value,null,new { style = "color:red;  font-size: 1.3em;line-height: 1.5; font-size: 1.3em;" })</li>
                }
                else
                {
                    <li>@Html.ActionLink(nav.Key, "", nav.Value,null,new { style = "font-size: 1.3em;line-height: 1.5; font-size: 1.3em;" })</li>
                }
            }
        </ul>
       
        <ul class="nav navbar-nav navbar-right">
            @{

                if (Model == "Login") { 
                <li class="active">@Html.ActionLink("Login", "", "Login", null, new { style = "color:red;  font-size: 1.3em;line-height: 1.5; font-size: 1.3em;" })</li>
                }
                else{
                <li>@Html.ActionLink("Login", "", "Login", null, new { style = "font-size: 1.3em;line-height: 1.5; font-size: 1.3em;color:red;" })</li>
                }
            }
        </ul>
         <ul class="nav navbar-nav navbar-right" style="margin-right:20px;">
           
                <li>@Html.ActionLink("Comments", "", "Comments", null, new { style = "color:red;  font-size: 1.3em;line-height: 1.5; font-size: 1.3em;" })</li>
        </ul>
         
    </div>
</div>