@model Hospital_Management.Models.Doctor
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section navbar{
    @Html.Partial("_NavbarPartial", "Departments")
}


    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Search", "Departments", FormMethod.Post))
            {
            <div class="input-group">
                <span class="input-group-btn">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", style = "width:300px" } })
                </span>
                <input type="submit" value="search" class="btn btn-info" />

            </div>
            }
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm("Index2", "Departments", FormMethod.Post))
            {
              <div class="input-group">
                  @Html.DropDownListFor(model => model.dept, new SelectList(Model.getAllDepartmentsName, "Text", "Text"), "-Select Department-", new { @class = "form-control btn btn-primary", style = "float:right;" })
              <span class="input-group-btn">
                <input type="submit" value="search" class="btn btn-info" />
               </span>
              </div>

            }
        </div>

    </div>








<br /><br />
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dept)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AllDoctorList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_no)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePath)" width="100" height="80" />
            </td>

        </tr>
    }

</table>



